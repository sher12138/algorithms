set(TENSORRT_FOUND 1 CACHE INTERNAL "Tensorrt_FOUND")
message(STATUS "In xavier platform")
set(TENSORRT_INCLUDE_DIRS ${TOOLCHAIN_PATH}/usr/include/${CMAKE_SYSTEM_PROCESSOR}-linux-gnu CACHE INTERNAL "TENSORRT_INCLUDE_DIRS")
set(TENSORRT_LIBRARY_DIRS ${TOOLCHAIN_PATH}/usr/lib/${CMAKE_SYSTEM_PROCESSOR}-linux-gnu/tegra ${TOOLCHAIN_PATH}/usr/lib/${CMAKE_SYSTEM_PROCESSOR}-linux-gnu/tegra-egl ${TOOLCHAIN_PATH}/usr/lib/${CMAKE_SYSTEM_PROCESSOR}-linux-gnu)

foreach(LIBDIR IN LISTS TENSORRT_LIBRARY_DIRS)
    message(STATUS "LIBDIR = ${LIBDIR}")
    file(GLOB LIBRARIES "${LIBDIR}/libnv*.so.*")
    message(STATUS "LIBRARIES = ${LIBRARIES}")
    list(APPEND TENSORRT_LIBRARIES ${LIBRARIES})
endforeach()

include_directories(${TENSORRT_INCLUDE_DIRS})
link_directories(${TENSORRT_LIBRARY_DIRS})
message(STATUS "TENSORRT_INCLUDE_DIRS = ${TENSORRT_INCLUDE_DIRS}")
message(STATUS "TENSORRT_LIBRARY_DIRS = ${TENSORRT_LIBRARY_DIRS}")
message(STATUS "TENSORRT_LIBRARIES = ${TENSORRT_LIBRARIES}")
